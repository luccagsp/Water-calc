---
interface Props {
  img: ImageMetadata;
  ammount: number;
}


import { Image } from 'astro:assets';

import up from '../assets/green.svg'
import down from '../assets/red.svg'

const { img, ammount } = Astro.props;

import { Arrow } from '../components/Arrow'
---
<li class="m-8">
  <div id="content" class="">
    <div class="bottle  relative">
      <Image class="absolute bottom-0" src={img} alt="image"></Image>
    </div>
    <div class="flex items-center justify-center pt-5">
      <Arrow client:visible source={up} ammount={ammount}/>
      <Arrow client:visible source={down} ammount={-ammount}/>
    </div>
  </div>
</li>

<style>
  #content{
    max-width: 125px;
    max-height: 500px;
    display: grid;
    grid-template-rows: 3fr 1fr;
  }
  .bottle{
    height: 450px;
    width: 125px;
  }
</style>